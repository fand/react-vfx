{
    "$schema": "https://turborepo.org/schema.json",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "lib",
                "build",
                "dist"
            ]
        },
        "dev": {
            "outputs": []
        },
        "clean": {
            "outputs": []
        },
        "lint": {
            "outputs": []
        },
        "deploy": {
            "dependsOn": [
                "build",
                "test",
                "lint"
            ],
            "outputs": []
        }
    }
}
